<view class="rechargeView">
  <view class="intro">
    <text class="reText">{{rechargeText}}</text>
  </view>
  <view class="QRcode">
    <image class="qrcode" src="/image/alipay.jpg" mode="aspectFit"></image>
    <image class="qrcode" src="/image/wechat.jpg" mode="aspectFit"></image>
  </view>
  <view class="backbtn">
    <button class="saveBtn" bindtap="jumpSave">{{saveText}}</button>
  </view>
  <view class="backbtn">
    <button class="backBtn" bindtap="jumpBack">{{btnText}}</button>
  </view>
</view>